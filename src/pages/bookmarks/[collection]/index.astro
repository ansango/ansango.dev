---
import { LayoutBookmarks } from "@/components";
import { site } from "@/constants";
import { getBookmarksStaticPaths } from "@/lib/astro";
import { getBookmarksByCollection } from "@/lib/raindrop";

export { getBookmarksStaticPaths as getStaticPaths };

const { collection } = Astro.params;
const entries = await getBookmarksByCollection(collection);
const entriesPerPage = site.pages.bookmarks.entriesPerPage;
const meta = site.pages.bookmarks;
---

<LayoutBookmarks
  collection={collection}
  entries={entries}
  entriesPerPage={entriesPerPage}
  meta={meta}
  page={1}
  isIndex
/>
