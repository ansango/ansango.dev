<section class="giscus-container border-t"></section>

<script is:inline data-astro-rerun>
  function loadGiscus() {
    const container = document.querySelector(".giscus-container");
    if (!container) return;

    container.innerHTML = "";

    const script = document.createElement("script");
    script.src = "https://giscus.app/client.js";
    script.setAttribute("data-repo", "ansango/ansango.dev");
    script.setAttribute("data-repo-id", "R_kgDOQAhHcw");
    script.setAttribute("data-category", "Announcements");
    script.setAttribute("data-category-id", "DIC_kwDOQAhHc84CxXgQ");
    script.setAttribute("data-mapping", "pathname");
    script.setAttribute("data-strict", "0");
    script.setAttribute("data-reactions-enabled", "1");
    script.setAttribute("data-emit-metadata", "0");
    script.setAttribute("data-input-position", "top");
    script.setAttribute("data-theme", "transparent_dark");
    script.setAttribute("data-lang", "es");
    script.setAttribute("data-loading", "lazy");
    script.setAttribute("crossorigin", "anonymous");
    script.async = true;

    container.appendChild(script);
  }

  loadGiscus();

  document.addEventListener("astro:after-swap", loadGiscus);
</script>
