---
import type { CollectionName, Meta } from "@/content.config";
import { LayoutCollectionWiki, LayoutCollectionDefault } from "@/layout";
import { type Entries } from "@/lib/collections";

interface Props {
  collection: CollectionName;
  entries: Entries;
  page: number;
  entriesPerPage: number;
  isIndex: boolean;
  meta: Meta;
}

const { entries, page, isIndex, meta, collection, entriesPerPage } =
  Astro.props;
const customCollections = ["wiki"];
---

{collection === "wiki" && <LayoutCollectionWiki {entries} {meta} />}

{
  customCollections.includes(collection) === false && (
    <LayoutCollectionDefault
      {collection}
      {entries}
      {meta}
      {page}
      {isIndex}
      {entriesPerPage}
    />
  )
}
