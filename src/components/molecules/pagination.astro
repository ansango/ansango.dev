---
/**
 * ğŸ“„ Pagination Component
 *
 * @description Navigation component for paginated content lists.
 * Displays current page, total pages, and prev/next navigation links.
 *
 * @usage
 * ```astro
 * <Pagination
 *   currentPage={2}
 *   totalPages={5}
 *   prevUrl="/blog/"
 *   nextUrl="/blog/3/"
 * />
 * ```
 *
 * @compatible
 * - ğŸ”— Uses Link component for navigation
 * - ğŸ“ Used in collection and archive pages
 * - â™¿ Accessible with ARIA labels
 */
import { Link } from "@/components/atoms";
import { ChevronIcon } from "../icons";

export interface Props {
  currentPage: number;
  totalPages: number;
  prevUrl: string;
  nextUrl: string;
  className?: string;
}

const {
  currentPage,
  totalPages,
  prevUrl,
  nextUrl,
  className = "",
} = Astro.props;
const prevDisabled = currentPage <= 1;
const nextDisabled = currentPage >= totalPages;
---

{
  totalPages > 1 && (
    <nav
      aria-label="Pagination"
      class={`flex justify-between pt-4 ${className}`}
    >
      <Link
        disabled={prevDisabled}
        href={prevUrl}
        className={`group focus-visible:ring-accent -ml-1 flex items-center gap-1 transition-colors focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:outline-none ${prevDisabled ? "text-muted opacity-60" : ""}`}
        ariaLabel="Previous"
        prefetch
      >
        <ChevronIcon
          className={`size-4 shrink-0 rotate-180 transition-transform ${!prevDisabled ? "group-hover:-translate-x-0.5" : ""}`}
        />{" "}
        Ant
      </Link>
      <span>
        {currentPage} / {totalPages}
      </span>
      <Link
        disabled={nextDisabled}
        href={nextUrl}
        className={`group focus-visible:ring-accent -mr-1 flex items-center gap-1 transition-colors focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:outline-none ${nextDisabled ? "text-muted opacity-60" : ""}`}
        ariaLabel="Next"
        prefetch
      >
        Sig{" "}
        <ChevronIcon
          className={`size-4 shrink-0 transition-transform ${!nextDisabled ? "group-hover:translate-x-0.5" : ""}`}
        />
      </Link>
    </nav>
  )
}
