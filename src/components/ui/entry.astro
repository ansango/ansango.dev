---
import type { Entry } from "@/lib/collections";
import { getFormatDate, getReadingTime } from "@/lib/utils";

interface Props {
  entry: Entry;
}

const { entry } = Astro.props;
const { data, body } = entry;
const { title, date, description } = data;
const timeReading = getReadingTime(body);

const time = date && getFormatDate(date);
---

<h3 class="group-hover:text-link line-clamp-1 font-medium">
  {title}
</h3>
<p class="text-muted text-sm">
  {time && <time datetime={time}>{time}</time>}
  {date && timeReading > 1 && <span>·</span>}
  {timeReading > 1 && <span>{timeReading} min de lectura</span>}
</p>
<p class="text-muted line-clamp-2">{description}</p>
<span class="text-muted block text-sm"> Leer más → </span>
