---
import { LayoutDefault } from "@/components";
import { getPagination } from "@/lib/collections";

import type { Meta } from "@/content.config";
import type { CachedBookmarkData } from "@/lib/raindrop";
import {
  BookmarkHero,
  BookmarkList,
  BookmarkPagination,
} from "@/components/organisms/bookmarks/[bookmark]";

interface Props {
  entries: CachedBookmarkData[];
  collection: string;
  page: number;
  entriesPerPage: number;
  isIndex: boolean;
  meta: Meta;
}

const { entries, page, entriesPerPage, isIndex, meta, collection } =
  Astro.props;
---

<LayoutDefault {...meta} type="article">
  <BookmarkHero
    collection={collection.replaceAll(/[.-]/g, " ")}
    entriesCount={entries.length}
  />
  <BookmarkList {entries} isIndex={isIndex} page={page} />
  <BookmarkPagination {entries} {isIndex} {page} {collection} />
</LayoutDefault>
