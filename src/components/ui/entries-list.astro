---
import type { Entry } from "@/lib/collections";
import { getFormatDate } from "@/lib/utils";

interface Props {
  entries: Array<Entry>;
}

const { entries } = Astro.props;
---

<ul class="list-none space-y-2">
  {
    entries.map(({ collection, id, data: { date, title, index,mod } }) => {
      return (
        <li class="list-none">
          <a class="flex items-baseline" href={`/${collection}` + (index ? "" : `/${id}`)}>
            {date && (
              <time
                class="text-sm text-muted whitespace-nowrap min-w-20"
                datetime={getFormatDate(mod ?? date)}
              >
                {getFormatDate(mod ?? date, "es-ES", {
                  year: "numeric",
                  month: "2-digit",
                })
                  .split("/")
                  .reverse()
                  .join(" Â· ")}
              </time>
            )}
            <u class="line-clamp-1">{title}</u>
          </a>
        </li>
      );
    })
  }
</ul>
