---
import { Pagination, LayoutDefault } from "@/components";
import {
  ArchiveHero,
  ArchiveList,
  ArchivePagination,
} from "@/components/organisms/archive";
import type { Meta } from "@/content.config";
import { type Entry, getPagination, type Entries } from "@/lib/collections";

interface Props {
  entries: Entries;
  page: number;
  entriesPerPage: number;
  isIndex: boolean;
  meta: Meta;
}

const { entries, page, isIndex, meta } = Astro.props;


---

<LayoutDefault {...meta} type="main">
  <ArchiveHero entriesCount={entries.length} />
  <ArchiveList entries={entries} isIndex={isIndex} page={page} />
  <ArchivePagination entries={entries} isIndex={isIndex} page={page} />
</LayoutDefault>
