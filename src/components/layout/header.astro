---
import { site } from "@/constants";
import { Container } from "@/components";
import Searcher from "../searcher/searcher.astro";

const pathname = Astro.url.pathname;
const path = pathname.split("/").filter(Boolean)[0] || null;
---

<header
  class="fixed top-0 left-0 right-0 z-50 py-4 backdrop-blur-sm saturate-100"
>
  <Container>
    <div class="flex flex-wrap gap-y-2 justify-between">
      <div>
        <a href="/">
          {site.name}
        </a>
        {
          path && (
            <>
              <span class="text-muted"> / </span>
              <a class="text-muted" href={`/${path}`}>
                {path}
              </a>
            </>
          )
        }
      </div>
      <Searcher />
    </div>
  </Container>
</header>
